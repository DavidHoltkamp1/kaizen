<h2>Sign up</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <div class="row">
      <div class="col-sm-10">
        <div class="form-check">
          <%= f.radio_button :status, 'alumni', class: 'form-check-input radioButtons', id: "gridRadios1" %>
          <%= f.label "Turing Alumni", nil, class: 'form-check-label', for: "gridRadios1" %>
        </div>
        <div class="form-check">
          <%= f.radio_button :status, 'student', class: 'form-check-input radioButtons', id: "gridRadios2" %>
          <%= f.label "Turing Student", nil, class: 'form-check-label', for: "gridRadios2" %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :first_name, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :last_name, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :cohort, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :cohort, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :user_name, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :user_name, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 actions">
      <%= f.submit 'Sign up', class: "btn btn-primary editProfileSubmit" %>
    </div>
  </div>
<% end %>

<%= render "/partials/links" %>
