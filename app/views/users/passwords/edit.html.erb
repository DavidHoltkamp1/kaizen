<h2>Change your password</h2>
  <%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="form-group row">
    <%= f.label :password, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 actions">
      <%= f.submit 'Change my password', class: "btn btn-primary editProfileSubmit" %>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
