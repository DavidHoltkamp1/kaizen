<h2>Post a Question:</h2>

<%= form_for(@question, url: '/questions') do |f| %>
  <div class="field">
    <div class="row">
      <div class="col-sm-10">
        <div class="form-check">
          <%= f.radio_button :forum, 'technical', class: 'form-check-input radioButtons', id: "gridRadios1" %>
          <%= f.label "Technical", nil, class: 'form-check-label', for: "gridRadios1" %>
        </div>
        <div class="form-check">
          <%= f.radio_button :forum, 'professional', class: 'form-check-input radioButtons', id: "gridRadios2" %>
          <%= f.label "Professional", nil, class: 'form-check-label', for: "gridRadios2" %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :subject, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :subject, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, autofocus: true, rows: '3', class: 'form-control' %>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 actions">
      <%= f.submit 'Submit Question', class: "btn btn-primary submitButton" %>
    </div>
  </div>
<% end %>
