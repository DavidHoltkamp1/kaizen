<h2>What is your Answer to the quesiton </h2>

<p><%= @question.content %></p>

<%= form_tag "/questions/#{@question.id}/answers", method: :post do %>
  <div class="form-group">
    <%= label_tag :content %>
    <%= text_area_tag :content, nil, rows: '3', class: 'form-control' %>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 actions">
      <%= submit_tag 'Submit', class: "btn btn-primary submitButton" %>
    </div>
  </div>
<% end %>