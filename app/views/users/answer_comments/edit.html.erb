<%= form_tag "/questions/#{@question.id}/answers/#{@answer.id}/comments/#{@comment.id}", method: :patch do %>
  <%= label_tag :content %>
  <%= text_field_tag :content %>

  <%= submit_tag 'Submit'%>
<% end %>