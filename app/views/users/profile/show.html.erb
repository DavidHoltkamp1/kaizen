<p>Welcome <%= "#{@user.first_name}" %> <%= "#{@user.last_name}"%>! You successfully signed in.</p>

<section class='profile-info''>
  <div id='avatar'><%= image_tag 'https://i.imgur.com/bdnuBf1.jpg', size: '300x150' %></div>
  <p><%= @user.first_name %> <%= @user.last_name %></p>
  <p>Cohort: <%= @user.cohort %></p>
  <p>Program Status: <%= @user.status %></p>
</section>

<% if @user.gh_token.nil? %>
<div id='github_auth'>
  <%= link_to 'Connect to GitHub', user_github_omniauth_authorize_path %>
</div>
<% end %>

<% if @user.so_token.nil? %>
<div id='stackoverflow_auth'>
  <%= link_to 'Connect to StackOverflow', user_stackexchange_omniauth_authorize_path %>
</div>
<% elsif !@user.award_count.zero? %>
<div id='so_badges'>
  <p>StackOverflow Award Count: <%= @user.award_count %></p>
</div>
<% else %>
<p>You have no awards!</p>
<% end %>

<p><%= link_to "Edit", "/profile/edit" %> | <%= link_to "Delete", destroy_user_path(@user), method: :delete, data: { confirm: "You sure?" } %></p>

<p><%= link_to "Change your password", edit_user_registration_path %></p>

<h4>Your Recent Activity</h4>

<% @user.ordered_questions.each do |question| %>
  <section class='question-info'>
    <h5>Question: <%= link_to question.subject, "/questions/#{question.id}" %></h5>
    <p>Upvotes: <%= question.upvotes %></p>
    <p>Last Updated: <%= question.updated_at.to_date %></p>

  </section>
<% end %>
