<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <%= f.label :email, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, nil, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group row">
      <div class="col-sm-2"><%= f.label :remember_me %></div>
      <div class="col-sm-10">
        <div class="form-check">
          <%= f.check_box :remember_me, class: 'form-check-input', id: 'gridCheck1' %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-sm-10 actions">
      <%= f.submit 'Log in', class: "btn btn-primary submitButton" %>
    </div>
  </div>
<% end %>

<%= render "partials/links" %>
